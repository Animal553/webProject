<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qianfeng.mapper.SubjectTypeMapper">

    <insert id="addSubjectType" parameterType="subjectType">
        INSERT INTO subject_type(subject_type_name) VALUES (#{subjectTypeName})
    </insert>

    <delete id="deleteSubjectType" parameterType="int">
        DELETE FROM subject_type WHERE subject_type_id =#{subjectTypeId}
    </delete>


    <update id="updateSubjectType" parameterType="subjectType">
        UPDATE subject_type
        <set>
            <if test="subjectTypeName!=null">subject_type_name =#{subjectTypeName}</if>
        </set>
        <where>
            subject_type_id =#{subjectTypeId}
        </where>
    </update>

    <select id="getSubjectTypeList" resultType="subjectType">
        SELECT * FROM subject_type
    </select>

    <select id="getSubjectType" parameterType="int" resultType="subjectType">
        SELECT * FROM subject_type WHERE subject_type_id =#{subjectTypeId}
    </select>
</mapper>